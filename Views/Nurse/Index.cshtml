@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Utiliza este layout si tienes uno, o define null para no usar ningún layout
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Inicio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('/Resources/img/background.png');
            background-size: cover;
            background-blend-mode: darken;
        }
        .animation:hover {
          transform: translateY(-2px);
          border-top: 6px solid ;
          transition: transform 0.2s;
        }
    </style>
</head>
<body>
<h1 class="text-center mt-5">Herramientas</h1>
<div class="m-4">
  <div class="container">  
    <div class="album py-3 bg-light mw-100">
      <h5 class="text-center card mb-2 box-shadow mx-4 p-2">
        Estas herramientas te ayudarán a registrar, gestionar los cursos, estudiantes y modulos de la plataforma.
      </h5>
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <a class="nav-link text-dark" asp-action="ListaCursos" asp-controller="Nurse">
                <div class="animation">
                  <div class="card mb-4 box-shadow" style="align-items: center;">
                    <h5 class="m-1">Lista de cursos</h5>
                    <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [60%x225]" src="https://cdn-icons-png.flaticon.com/512/2002/2002010.png" data-holder-rendered="true" style="height: 225px; width: 50%; display: block;">
                    <div class="card-body">
                      <p class="card-text">Aqui podrás ver la lista de cursos. En el detalle de cada curso ver sus estudiantes, modulos registrados, notas y gestionar examenes.</p>
                    </div>
                  </div>
                </div>
              </a>
              
              
            </div>
            <div class="col-md-6">
              <a class="nav-link text-dark" asp-action="ListaUsers" asp-controller="Nurse">
                <div class="animation">
                  <div class="card mb-4 box-shadow" style="align-items: center;">
                    <h5 class="m-1">Lista de estudiantes</h5>
                    <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [60%x225]" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSyEHgoOxu6ijoCKPbj4w0eVdwbYoOh5QpepQ&usqp=CAU" data-holder-rendered="true" style="height: 225px; width: 50%; display: block;">
                    <div class="card-body">
                      <p class="card-text">Aqui podrás ver la lista completa de estudiantes con sus respectivos datos y cursos registrados.</p>
                    </div>
                  </div>
                </div>
              </a>              
            </div>

            <div class="col-md-6">
              <a class="nav-link text-dark" asp-action="RegistroCurso" asp-controller="Nurse">
                <div class="animation">
                  <div class="card mb-4 box-shadow" style="align-items: center;">
                    <h5 class="m-1">Registrar cursos</h5>
                    <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [60%x225]" src="data:image/png;base64," data-holder-rendered="true" style="height: 225px; width: 50%; display: block;">
                    <div class="card-body">
                      <p class="card-text">Aqui podrás registrar nuevos cursos.</p>
                    </div>
                  </div>
                </div> 
              </a>
                           
            </div>
            <div class="col-md-6">
              <a class="nav-link text-dark" asp-action="RegistroModulo" asp-controller="Nurse">
                <div class="animation">
                  <div class="card mb-4 box-shadow" style="align-items: center;">
                    <h5 class="m-1">Registrar modulos</h5>
                    <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [60%x225]" src="https://cdn-icons-png.flaticon.com/512/1232/1232761.png" data-holder-rendered="true" style="height: 225px; width: 50%; display: block;">
                    <div class="card-body">
                      <p class="card-text">Aqui podrás registrar modulos para sus cursos correspondientes.</p>
                    </div>
                  </div>
                </div>
              </a>              
            </div>
          </div>
        </div>
      </div>
</div>
</div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
      var valor = sessionStorage.getItem('UserRole');
      console.log("UserRole:"+valor);
      if(valor == 1){
        console.log("eres user, fuera de aqui");
        window.location.href = "http://localhost:5053/Student/Index";
      }
        function registrarUsuario() {
            var usuario = {
                Nombre: document.getElementById('Nombre').value,
                CorreoElectronico: document.getElementById('CorreoElectronico').value,
                Contraseña: document.getElementById('Contraseña').value,
                Edad: parseInt(document.getElementById('Edad').value),
                Cargo: document.getElementById('Cargo').value,
                RolId: parseInt(document.getElementById('RolId').value)
            };

            fetch('http://localhost:5053/api/Usuarios/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(usuario)
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                alert('Usuario registrado con éxito!');
            })
            .catch((error) => {
                console.error('Error:', error);
                alert('Error al registrar el usuario');
            });
        }
    </script>
</body>
</html>