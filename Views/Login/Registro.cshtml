@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registro de Usuario</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('/Resources/img/background.png');
            background-size: cover;
        }
        .container {
            background-color: white;
            flex-direction: column;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            margin: 50px auto;
        }
        h2 {
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Registrate</h2>
        <p>Verifica que la información ingresada sea correcta, se usará para la certificación final.</p>
        <form id="userForm" onsubmit="return validarFormulario()">
            <div class="mb-3">
                <label for="Nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="Nombre" name="Nombre" required>
                <div class="invalid-feedback">El nombre es requerido.</div>
            </div>
            <div class="mb-3">
                <label for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="CorreoElectronico" name="CorreoElectronico" required>
                <div class="invalid-feedback">Ingresa un correo electrónico válido.</div>
            </div>
            <div class="mb-3">
                <label for="Contraseña" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="Contraseña" name="Contraseña" required>
                <div class="invalid-feedback">La contraseña es requerida.</div>
            </div>
            <div class="mb-3">
                <label for="Edad" class="form-label">Edad</label>
                <input type="number" class="form-control" id="Edad" name="Edad" required>
                <div class="invalid-feedback">Ingresa una edad válida.</div>
            </div>
            <div class="mb-3">
                <label for="Cargo" class="form-label">Cargo</label>
                <input type="text" class="form-control" id="Cargo" name="Cargo" required>
                <div class="invalid-feedback">El cargo es requerido.</div>
            </div>
            <div class="mb-3">
                <label for="Telefono" class="form-label">Teléfono</label>
                <input type="tel" class="form-control" id="Telefono" name="Telefono" required>
                <div class="invalid-feedback">El teléfono es requerido.</div>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a class="ml-1" asp-action="Index" asp-controller="Login"><button class="btn btn-outline-info" type="button">Ir a login</button></a>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        function validarFormulario() {
            var formulario = document.getElementById('userForm');
            var inputs = formulario.getElementsByTagName('input');
            var esValido = true;

            for (var i = 0; i < inputs.length; i++) {
                if (!inputs[i].checkValidity()) {
                    inputs[i].classList.add('is-invalid');
                    esValido = false;
                } else {
                    inputs[i].classList.remove('is-invalid');
                }
            }

            if (esValido) {
                registrarUsuario();
            }
            return false;
        }

        function registrarUsuario() {
            var usuario = {
                Nombre: document.getElementById('Nombre').value,
                CorreoElectronico: document.getElementById('CorreoElectronico').value,
                Contraseña: document.getElementById('Contraseña').value,
                Edad: parseInt(document.getElementById('Edad').value),
                Cargo: document.getElementById('Cargo').value,
                Telefono: document.getElementById('Telefono').value,  // Incluyendo el teléfono
                RolId: 1  // Asumiendo un RolId predeterminado
            };

            fetch('http://localhost:5053/api/Usuarios/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(usuario)
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                alert('Usuario registrado con éxito!');
                limpiarFormulario();
            })
            .catch((error) => {
                console.error('Error:', error);
                alert('Error al registrar el usuario');
            });
        }

        function limpiarFormulario() {
            var formulario = document.getElementById('userForm');
            formulario.reset();
            var inputs = formulario.getElementsByTagName('input');
            for (var i = 0; i < inputs.length; i++) {
                inputs[i].classList.remove('is-invalid');
            }
        }
    </script>
</body>
</html>
